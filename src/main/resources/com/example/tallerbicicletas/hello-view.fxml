<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tallerbicicletas.controller.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <children>
        <TabPane prefHeight="226.0" prefWidth="747.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>

                <!-- CLIENTES -->
                <Tab text="Clientes">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>

                                <Label layoutY="9.0" text="Nombre Completo:" />
                                <TextField fx:id="txtNombre" layoutX="105.0" layoutY="5.0" />

                                <Label layoutY="38.0" prefWidth="90.0" text="Identificación:" />
                                <TextField fx:id="txtIdentificacion" layoutX="105.0" layoutY="34.0" />

                                <Label layoutY="66.0" text="Teléfono:" />
                                <TextField fx:id="txtTelefono" layoutX="105.0" layoutY="62.0" />

                                <Label layoutY="99.0" text="Dirección:" />
                                <TextField fx:id="txtDireccion" layoutX="105.0" layoutY="95.0" />

                                <Button fx:id="btnGuardarCliente" layoutX="132.0" layoutY="137.0" mnemonicParsing="false" onAction="#guardarCliente" text="Guardar Cliente" />
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>

                <!-- BICICLETAS -->
                <Tab text="Bicicletas">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>

                                <Label layoutX="14.0" layoutY="14.0" text="Marca:" />
                                <TextField fx:id="txtMarca" layoutX="60.0" layoutY="10.0" />

                                <Label layoutX="14.0" layoutY="43.0" text="Modelo:" />
                                <TextField fx:id="txtModelo" layoutX="60.0" layoutY="39.0" />

                                <Label layoutX="14.0" layoutY="74.0" text="Color:" />
                                <TextField fx:id="txtColor" layoutX="60.0" layoutY="70.0" />

                                <Label layoutX="14.0" layoutY="105.0" text="Serial:" />
                                <TextField fx:id="txtSerial" layoutX="60.0" layoutY="101.0" />

                                <Button fx:id="btnGuardarBicicleta" layoutX="82.0" layoutY="164.0" mnemonicParsing="false" onAction="#guardarBicicleta" text="Guardar Bicicleta" />
                        <ComboBox fx:id="comboTipo" layoutX="59.0" layoutY="132.0" prefWidth="150.0" promptText="Seleccione el tipo" />
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>

                <!-- MECÁNICOS -->
                <Tab text="Mecánicos">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>

                                <Label layoutX="7.0" layoutY="5.0" text="Nombre:" />
                                <TextField fx:id="txtNombreMecanico" layoutX="77.0" layoutY="2.0" />

                                <Label layoutX="5.0" layoutY="32.0" text="Identificación:" />
                                <TextField fx:id="txtIdentificacionMecanico" layoutX="77.0" layoutY="28.0" />

                                <Label layoutX="7.0" layoutY="58.0" text="Especialidad:" />
                                <TextField fx:id="txtEspecialidad" layoutX="77.0" layoutY="54.0" />

                                <Label layoutX="7.0" layoutY="90.0" text="Sueldo:" />
                                <TextField fx:id="txtSueldo" layoutX="77.0" layoutY="86.0" />

                                <Button fx:id="btnGuardarMecanico" layoutX="95.0" layoutY="129.0" mnemonicParsing="false" onAction="#guardarMecanico" text="Guardar Mecánico" />
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>

                <Tab text="Órdenes">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ComboBox fx:id="comboClienteOrden" layoutX="14.0" layoutY="14.0" prefHeight="26.0" prefWidth="171.0" promptText=" Seleccione el Cliente" />
                        <ComboBox fx:id="comboBicicletaOrden" layoutX="14.0" layoutY="46.0" prefHeight="26.0" prefWidth="170.0" promptText="Seleccione la Bicicleta" />
                        <ComboBox fx:id="comboMecanicoOrden" layoutX="14.0" layoutY="79.0" prefHeight="26.0" prefWidth="170.0" promptText="Seleccione el Mecánico" />
                        <TextField fx:id="txtMotivoOrden" layoutX="214.0" layoutY="33.0" />
                        <TextField fx:id="txtProblemaOrden" layoutX="214.0" layoutY="79.0" />
                        <Button fx:id="btnCrearOrden" layoutX="133.0" layoutY="134.0" mnemonicParsing="false" onAction="#crearOrden" text="Crear Órden" />
                        <Label layoutX="214.0" layoutY="14.0" text="Motivo del Servicio:" />
                        <Label layoutX="214.0" layoutY="63.0" text="Descripción del Problema: " />
                     </children></AnchorPane>
                    </content>
                </Tab>

                <Tab text="Consultas">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                    </content>
                </Tab>

            </tabs>
        </TabPane>
    </children>
</VBox>
